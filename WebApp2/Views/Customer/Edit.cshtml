    <script>

        $(document).ready(function () {
            
        });

        $("#texFile").change(function (event) {
            alert('newton');
            var files = event.target.files;
            alert(files);
            $("#imgViewer").attr("src",window.URL.createObjectURL(files[0]));

        });

    </script>
